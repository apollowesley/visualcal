{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "./nodes-build/runtime",
    "baseUrl": ".",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["./src/nodes/**/node.ts", "./src/nodes/*.ts", "./src/@types"],
  "exclude": ["./src/nodes/**/frontend.ts", "./src/nodes/builder.ts"]
}
