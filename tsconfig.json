  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ]
  },
  "include": [
    "src/**/*"
  ]
}
