{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@root/*": [ "./*" ],
      "@shared/*": [ "src/shared/*" ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ]
  },
  "include": [
    "src/**/*"
  ]
}
