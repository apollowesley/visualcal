{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
