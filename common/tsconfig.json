{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "preserveConstEnums": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ]
}
